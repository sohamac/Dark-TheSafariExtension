{
  "manifest_version": 3,
  "name": "Quest Safari Extension",
  "version": "1.0",
  "description": "A basic Safari Web Extension template for the Quest hackathon.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Quest Extension"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "images/icon-48.png",
    "96": "images/icon-96.png",
    "128": "images/icon-128.png"
  }
}
